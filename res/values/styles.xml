<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/keyboard_gap</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/keyboard_gap</item>
    </style>

    <style name="Button.Number">
        <item name="android:background">@drawable/button_number</item>
    </style>

    <style name="Button.Letter">
        <item name="android:background">@drawable/button_letter</item>
    </style>

    <style name="Button.Clear">
        <item name="android:background">@drawable/button_clear</item>
    </style>

    <style name="Button.Backspace">
        <item name="android:background">@drawable/button_backspace</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <style name="NumeralSystemRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">0.5dp</item>
    </style>

    <style name="FieldName">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/field_name_text_size</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="NumberField">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/number_field_text_size</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable" tools:targetApi="12">@drawable/cursor_color</item>
    </style>

</resources>
